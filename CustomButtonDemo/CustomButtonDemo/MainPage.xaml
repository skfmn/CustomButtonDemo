<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CustomButtonDemo.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CustomButtonDemo;assembly=CustomButtonDemo">

    <StackLayout
        Margin="0"
        Padding="0"
        HorizontalOptions="CenterAndExpand"
        Orientation="Vertical"
        VerticalOptions="Start">

        <Button
            FontAttributes="Bold"
            FontSize="14"
            Text="Button"
            TextColor="Black" />

        <local:CustomButton
            Padding="0"
            HorizontalContentAlignment="Start"
            VerticalContentAlignment="Center"
            FontAttributes="Bold"
            FontSize="20"
            HeightRequest="25"
            Text="Button"
            TextColor="Black" />
        
        <local:CustomButton
            Padding="0"
            HorizontalContentAlignment="Start"
            VerticalContentAlignment="Center"
            FontAttributes="Bold"
            HeightRequest="20"
            HorizontalOptions="Start"
            Text="button"
            TextColor="#36241e"
            VerticalOptions="Center" />
    </StackLayout>

</ContentPage>
